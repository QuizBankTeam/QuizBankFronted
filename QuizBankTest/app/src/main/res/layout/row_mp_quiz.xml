<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/optionNum"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/basic_quiz_pic"/>

                <TextView
                    android:id="@+id/QuizNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/question_num_background"
                    android:text="10 題"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/QuizTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="考試名稱"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"/>
                    <TextView
                        android:id="@+id/QuizStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/light_blue1"
                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="6dp"
                        android:text="ready"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/QuizMembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="成員: abc, def, kkk, uio"
                    android:textSize="15sp"
                    android:gravity="center_vertical"

                    android:paddingStart="12dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/QuizStartDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2023-06-14"
                android:textSize="15sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>