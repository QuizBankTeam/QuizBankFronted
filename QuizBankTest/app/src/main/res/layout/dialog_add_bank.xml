<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"

    app:strokeColor="@color/black"
    app:strokeWidth="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center_horizontal"
            android:text="新增題庫"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/dividing_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/layout_bank_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dividing_line1"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bank_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="題庫名稱:"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/bank_title"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="請輸入題庫名稱" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bank_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_bank_title"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bank_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="題庫類型:"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/bank_type"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="請輸入類型" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_bank_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_bank_type"
            android:layout_centerHorizontal="true"
            android:background="@color/colorRipple"
            android:foreground="?actionBarItemBackground"
            android:src="@drawable/plus_svgrepo_com" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>