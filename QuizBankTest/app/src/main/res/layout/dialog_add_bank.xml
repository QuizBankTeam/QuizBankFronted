<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/black"
        app:strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center_horizontal"
                android:text="新增題庫"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/dividing_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/title"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/layout_bank_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dividing_line1"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bank_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="題庫名稱:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/bank_title"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:hint="請輸入題庫名稱" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_bank_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_bank_title"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bank_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="題庫類型:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/bank_type"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:hint="請輸入類型" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_bank_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_bank_type"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bank_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成員:"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/btn_add_bank_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/background_bank_add_member"
                    android:onClick="addBankMember"
                    android:src="@drawable/plus_svgrepo_com" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/layout_bank_members"
                android:id="@+id/layout_bank_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bank_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="來源:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/bank_source"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:hint="請輸入類型" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_bank_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/plus_svgrepo_com" />


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>