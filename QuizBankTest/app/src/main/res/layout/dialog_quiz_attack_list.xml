<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <TextView
            android:id="@+id/turn_page"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="氣勢翻頁"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:drawableRight="@drawable/baseline_page"
            android:drawablePadding="0dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondary_text_color"/>

        <TextView
            android:id="@+id/throw_egg"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="砸雞蛋"
            android:textColor="@color/dark_yellow2"
            android:textSize="20sp"
            android:drawableRight="@drawable/baseline_egg"
            android:drawablePadding="0dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondary_text_color"/>

        <TextView
            android:id="@+id/steal_option"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="偷取選項"
            android:textColor="@color/light_red2"
            android:textSize="20sp"
            android:drawableRight="@drawable/baseline_crane"
            android:drawablePadding="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>