<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/option_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:strokeColor="@color/black"
        app:strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_description_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:gravity="top|left"
                android:text="選項 "
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/dividing_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_description_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:background="@color/black" />

            <EditText
                android:id="@+id/et_option_description"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@id/dividing_line"
                android:background="@null"
                android:gravity="top|left"
                android:hint="option description"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textSize="15sp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_confirm_button"
        android:clickable="true"
        android:padding="5dp"
        android:text="確定更改"
        android:textSize="20sp"
        android:visibility="gone"/>

</RelativeLayout>