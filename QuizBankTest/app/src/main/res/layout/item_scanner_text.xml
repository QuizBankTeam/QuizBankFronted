                                    <EditText
                                        android:id="@+id/question_option7"
                                        android:layout_width="0dp"
                                        android:layout_height="50dp"
                                        android:layout_weight="7"
                                        android:gravity="left"
                                        android:hint="請輸入選項描述"
                                        android:inputType="textMultiLine"
