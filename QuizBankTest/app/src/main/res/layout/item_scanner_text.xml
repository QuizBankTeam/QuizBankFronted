<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="330dp"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="-20dp"
    android:layout_height="wrap_content">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@color/teal_700"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <Spinner
                        android:id="@+id/spinner_question_type"
                        android:layout_width="match_parent"
                        android:entries="@array/question_type"
                        android:drawSelectorOnTop="true"
                        android:spinnerMode="dialog"
                        android:background="@drawable/spinner_back"
                        android:layout_height="40dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/iv_ocr_question_title"
                                android:layout_width="match_parent"
                                android:layout_weight="18"
                                android:layout_height="50dp"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:hint="題目標題 "
                                android:gravity="left"
                                android:inputType="textMultiLine"
                                android:scrollbars = "vertical"
                                android:singleLine="false" />

                        </FrameLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/black"
                        />
                    <LinearLayout
                        android:id="@+id/question_type"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:id="@+id/iv_ocr_question_num"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="38dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:hint="題號.️"
                            android:gravity="left"
                            android:inputType="textMultiLine"
                            android:scrollbars = "vertical"
                            android:singleLine="false" />

                        <Spinner
                            android:id="@+id/spinner_question_bank"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@color/black"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:textColor="#363A43"
                                android:textSize="16sp"
                                android:text="題目標籤"
                                />
                            <ImageButton
                                android:id="@+id/tag_press"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="25dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/label"
                                android:foreground="?actionBarItemBackground"
                                android:background="@drawable/shape_add_option"
                                android:scaleType="fitXY"

                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="9"/>
                        </LinearLayout>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:id="@+id/chooseTag"
                                android:layout_height="wrap_content">
                                <co.lujun.androidtagview.TagContainerLayout
                                    android:id="@+id/scannerTagForQuestion"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    app:container_background_color="#00000000"
                                    app:tag_enable_cross="true"
                                    app:container_enable_drag="true"
                                    app:horizontal_interval="3dp"
                                    app:tag_clickable="true"
                                    app:tag_theme="random"
                                    app:tag_text_size="10sp"
                                    app:vertical_interval="3dp" />
                            </FrameLayout>
                        </HorizontalScrollView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/black"
                            />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/iv_scanner_text"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:hint="OCR 結果"
                            android:focusableInTouchMode="true"
                            android:gravity="left"
                            android:inputType="textMultiLine"
                            android:overScrollMode="always"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:singleLine="false" />
                        <ImageButton
                            android:id="@+id/btn_view"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="74dp"
                            android:src="@drawable/view"
                            android:foreground="?actionBarItemBackground"
                            android:background="?actionBarItemBackground"
                            android:scaleType="fitXY" />
                        <ImageButton
                            android:id="@+id/btn_rescan"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="40dp"
                            android:src="@drawable/photocamera"
                            android:foreground="?actionBarItemBackground"
                            android:background="?actionBarItemBackground"
                            android:scaleType="fitXY" />
                        <ImageButton
                            android:id="@+id/btn_scan_photo"
                            android:layout_width="25dp"
                            android:layout_height="27dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/addimage"
                            android:foreground="?actionBarItemBackground"
                            android:background="?actionBarItemBackground"
                            android:scaleType="fitXY" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn_add_answer"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/shape_add_option"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="答案描述 💡"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                        <TextView
