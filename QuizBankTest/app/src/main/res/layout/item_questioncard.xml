<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:strokeColor="@color/bank_cardStroke"
        app:strokeWidth="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/question_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/book_square_svgrepo_com" />

            <TextView
                android:id="@+id/question_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/question_image"
                android:text="This is title"
                android:textColor="#606060"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/question_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_title"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/question_image"
                android:text="This is bank type"
                android:textColor="#606060"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/question_createdDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_type"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/question_image"
                android:text="YYYY/MM/DD"
                android:textColor="#606060"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/question_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_members"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/question_image"
                android:text="originate from: "
                android:textColor="#606060"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/question_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_members"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/question_from"
                android:text="creator: "
                android:textColor="#606060"
                android:textSize="12sp"/>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>