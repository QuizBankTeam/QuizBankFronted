<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.bank.BankSingleAnswerQuestionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorRipple">

        <TextView
            android:id="@+id/question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question Title"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@null"
            android:src="@drawable/baseline_more_selection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/question_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_yellow2"
            android:text="Type"
            android:textSize="15sp"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:paddingHorizontal="6dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/setting"
            app:layout_constraintStart_toEndOf="@+id/question_title"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/btn_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:onClick="backToPreviousPage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_black_color_back_24dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/question_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/title_bar"
        android:src="@drawable/society98_1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/question_description"
        android:layout_below="@id/question_image"
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:background="@drawable/question_description"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="Question Description"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/question_tags"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/question_description"
        android:background="@color/yellow"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/questionTagsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activity.BankSingleAnswerQuestionActivity">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_tags"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/questionOptionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activity.BankSingleAnswerQuestionActivity">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>